function updateCountry() {
  for (var i = select_dialect.options.length - 1; i >= 0; i--) {
    select_dialect.remove(i);
  }
  var list = langs[select_language.selectedIndex];
  for (var i = 1; i < list.length; i++) {
    select_dialect.options.add(new Option(list[i][1], list[i][0]));
  }
  select_dialect.style.visibility = list[1].length == 1 ? 'hidden' : 'visible';
}

var create_email = false;
var final_transcript = '';
var recognizing = false;
var ignore_onend;
var start_timestamp;
if (!('webkitSpeechRecognition' in window)) {
  upgrade();
} else {
  start_button.style.display = 'inline-block';
  var recognition = new webkitSpeechRecognition();
  recognition.continuous = true;
  recognition.interimResults = true;

  recognition.onstart = function() {
    recognizing = true;
    showInfo('info_speak_now');
    start_img.src = "<%= path_to_image('mic-animate.gif') %>";
  };

  recognition.onerror = function(event) {
    if (event.error == 'no-speech') {
      start_img.src = "<%= path_to_image('mic.gif') %>";
      showInfo('info_no_speech');
      ignore_onend = true;
    }
    if (event.error == 'audio-capture') {
      start_img.src = "<%= path_to_image('mic.gif') %>";
      showInfo('info_no_microphone');
      ignore_onend = true;
    }
    if (event.error == 'not-allowed') {
      if (event.timeStamp - start_timestamp < 100) {
        showInfo('info_blocked');
      } else {
        showInfo('info_denied');
      }
      ignore_onend = true;
    }
  };

  recognition.onend = function() {
    console.log(" im in onend");
    recognizing = false;
    if (ignore_onend) {
      return;
    }
    start_img.src = "<%= path_to_image('mic.gif') %>";
    if (!final_transcript) {
      showInfo('info_start');
      return;
    }
    showInfo('');
    if (window.getSelection) {
      window.getSelection().removeAllRanges();
      var range = document.createRange();
      range.selectNode(document.getElementById('final_span'));
      window.getSelection().addRange(range);
    }
    if (create_email) {
      create_email = false;
      createEmail();
    }
  };

  recognition.onresult = function(event) {
    var interim_transcript = '';
    for (var i = event.resultIndex; i < event.results.length; ++i) {
      if (event.results[i].isFinal) {
        final_transcript += event.results[i][0].transcript;
      } else {
        interim_transcript += event.results[i][0].transcript;
      }
    }
    final_transcript = capitalize(final_transcript);
    final_span.innerHTML = linebreak(final_transcript);
    interim_span.innerHTML = linebreak(interim_transcript);
    if (final_transcript || interim_transcript) {
      showButtons('inline-block');
    }
  };
}

function upgrade() {
  start_button.style.visibility = 'hidden';
  showInfo('info_upgrade');
}

var two_line = /\n\n/g;
var one_line = /\n/g;
function linebreak(s) {
  return s.replace(two_line, '<p></p>').replace(one_line, '<br>');
}

var first_char = /\S/;
function capitalize(s) {
  return s.replace(first_char, function(m) { return m.toUpperCase(); });
}

function createEmail() {
  var n = final_transcript.indexOf('\n');
  if (n < 0 || n >= 80) {
    n = 40 + final_transcript.substring(40).indexOf(' ');
  }
  var subject = encodeURI(final_transcript.substring(0, n));
  var body = encodeURI(final_transcript.substring(n + 1));
  window.location.href = 'mailto:?subject=' + subject + '&body=' + body;
}

function copyButton() {
  if (recognizing) {
    recognizing = false;
    recognition.stop();
  }
  copy_button.style.display = 'none';
  copy_info.style.display = 'inline-block';
  showInfo('');
}
var search_sessions = [];
var on_audio_ended_event;

function get_last_search_session(){
  if(search_sessions.length != 0){
    var last_session = search_sessions[search_sessions.length - 1];
    if(last_session.is_finished()){
      return false;
    }else{
      return last_session;
    }
  }else{
    return false;
  }
}

function searchText(){
  var search_text = document.getElementById("interim_span").value;
  recognition.stop();
  var search_session = get_last_search_session();
  if(search_session == false){
    search_session = new SearchSession(search_text);
    search_sessions.push(search_session);
  }else{
    search_session.add_text(search_text);
  }
  search_session.get_results();
}

var SearchSession = function(text){
  this.started = true;
  this.texts = [];
  this.finished = false;
  this.add_text(text);
}

SearchSession.prototype.is_finished = function(){
  return this.finished;
}

SearchSession.prototype.finish_session = function(){
  this.finished = true;
}

SearchSession.prototype.add_text = function(text){
  this.texts.push(text);
}

SearchSession.prototype.get_combined_text = function(){
  var whole_text = "";
  var search_session = this;
  $.each(search_session.texts, function(){
    var text = this;
    whole_text += " " + text;
  });
  return whole_text;
}
var get_results_inx = 1;
SearchSession.prototype.get_results = function(){
  var results = false;
  if(get_results_inx == 3){
    results = true;
  }
  get_results_inx = get_results_inx + 1;
  var search_session = this;
  $.ajax({
    url: 'http://localhost:3000/test/api',
    data: {'text' : search_session.get_combined_text(), 'results' : results},
    type: 'get',
    success: function(ret_data){
      if(ret_data.status == "missing_fields"){
        search_session.play_sound(ret_data.sound_file_to_play, function(){
          $("#audio-marker").hide();
        });
      }else{
        search_session.play_sound(ret_data.sound_file_to_play, function(){
          $("#audio-marker").hide();
          search_session.display_results(ret_data.results);
          search_session.finish_session();
        });
      }
    }
  });
}

SearchSession.prototype.display_results = function(results){
  console.log(results);
}

$("#audio-element")[0].addEventListener("ended", function(){
  if(on_audio_ended_event){
    on_audio_ended_event();
  }
});

SearchSession.prototype.play_sound = function(sound_file_to_play, callback){
  var audio_element = $("#audio-element").attr("src", sound_file_to_play);
  $("#audio-marker").show();
  audio_element[0].play();
  on_audio_ended_event = callback;
}



function startButton(event) {
  if (recognizing) {
    recognition.stop();
    return;
  }
  final_transcript = '';
  recognition.lang = select_dialect.value;
  recognition.start();
  ignore_onend = false;
  final_span.innerHTML = '';
  interim_span.innerHTML = '';
  start_img.src = "<%= path_to_image('mic-slash.gif') %>";
  showInfo('info_allow');
  showButtons('none');
  start_timestamp = event.timeStamp;
}

function showInfo(s) {
  if (s) {
    for (var child = info.firstChild; child; child = child.nextSibling) {
      if (child.style) {
        child.style.display = child.id == s ? 'inline' : 'none';
      }
    }
    info.style.visibility = 'visible';
  } else {
    info.style.visibility = 'hidden';
  }
}

var current_style;
function showButtons(style) {
  if (style == current_style) {
    return;
  }
  current_style = style;
  copy_button.style.display = style;
  search_button.style.display = style;
  copy_info.style.display = 'none';
}
</script>